@model CQRS_Project.MediatorDesignPattern.Commands.CreateCustomerCommand

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateCustomer</title>
</head>
<body>

    <div class="container">
        <h4>Müşteri Ekleme İşlemleri</h4>
        <hr />
        <div class="col-md-4">
            <form asp-action="CreateCustomer">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Müşteri Adı</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label">Müşteri Soyadı</label>
                    <input asp-for="Surname" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label">Departman</label>
                    <input asp-for="Department" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Müşteriyi Ekle" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <a asp-action="Index" class="btn btn-success">Müşteri Listesi</a>
    </div>

</body>
</html>
